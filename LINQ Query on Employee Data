using System;
using System.Collections.Generic;
using System.Linq;

namespace Portfolio
{
    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public decimal Salary { get; set; }
    }

    public class EmployeeManager
    {
        public static List<Employee> GetEmployees()
        {
            return new List<Employee>
            {
                new Employee { Id = 1, Name = "Alice", Salary = 50000 },
                new Employee { Id = 2, Name = "Bob", Salary = 60000 },
                new Employee { Id = 3, Name = "Charlie", Salary = 45000 }
            };
        }

        public static void DisplayHighEarners()
        {
            var highEarners = GetEmployees()
                .Where(e => e.Salary > 50000)
                .OrderBy(e => e.Name)
                .Select(e => new { e.Name, e.Salary });

            Console.WriteLine("High Earners:");
            foreach (var emp in highEarners)
                Console.WriteLine($"Name: {emp.Name}, Salary: {emp.Salary:C}");
        }
    }

    class Program
    {
        static void Main()
        {
            EmployeeManager.DisplayHighEarners();
        }
    }
}
